<footer class="xc-footer">
  <div class="xc-container" data-flex="row">
    <div class="xc-footer__nav" data-column="4">
      <nav>
        <ul>
          {{#foreach navigation}}
            <li class="nav-{{slug}}{{#if current}} nav-current{{/if}}" role="presentation">
              <a href="{{url absolute="true"}}">{{label}}</a>
            </li>
          {{/foreach}}
        </ul>
      </nav>
    </div>
    <div class="xc-footer__meta" data-column="4">
      <p>Published with <a href="https://ghost.org" target="_blank" rel="noopener">Ghost</a></p>
      <p>
        {{#unless @member}}
          <a class="gh-head-btn gh-btn" href="#/portal/signup" data-portal="signup">Subscribe</a>
        {{else}}
          <a class="gh-head-btn gh-btn" href="#/portal/account" data-portal="account">Account</a>
        {{/unless}}
      </p>
    </div>
    <div class="xc-footer__social" data-column="4">
      <ul>
        {{#if @site.facebook}}
          <li><a href="{{facebook_url @site.facebook}}" title="Facebook" target="_blank" rel="noopener">{{> "icons/social" name="facebook"}}</a></li>
        {{/if}}
        {{#if @site.twitter}}
          <li><a href="{{twitter_url @site.twitter}}" title="Twitter" target="_blank" rel="noopener">{{> "icons/social" name="twitter"}}</a></li>
        {{/if}}
        <li><a href="https://feedly.com/i/subscription/feed/{{@site.url}}/rss/" title="RSS" target="_blank" rel="noopener">{{> "icons/social" name="rss"}}</a></li>
      </ul>
    </div>
  </div>
</footer>